<div id="header">
  <div class="wrapper">
    <div id="headerinner">
      <div id="headercontent">
        <h1 id="site-name"><a href="/" title="Home" rel="home" id="masthead_link"></a></h1>
        <div id="headerlinks">
          <div class="block top-region menu-block clear-block" id="block-menu-menu-header-links">
            <ul class="menu">
              <li class="leaf"><a href="<%= AppConfig.headlinenav['contacturl'] %>"><%= t('headerlinenav.contact')%></a></li>
              <li class="leaf last"><a href="<%= AppConfig.headlinenav['deterprojecturl'] %>"><%= t('headerlinenav.deterproject')%></a></li>
              <li class="leaf first active-trail">
                <%= 
                 # possible states: 0=not logged in, 1=error logging in, 2=logged in, 3=logout, 4=timed out
                 rc = loginStatus
	         if rc == 2
                     link_to('Log Out', "login?logout=true", { :confirm => "#{translate( :are_you_sure )}", :method => :delete }  )
	         else
                     link_to('Log In', "login")
	         end
	         %>
	      </li>
            </ul>
          </div>
        </div> <!-- end sitename --> <!-- END SLOGAN -->
      </div>
     </div><!-- END HEADERINNER -->
   <div id="navigation">
     <del class="wrap">
       <ul>
         <li class="leaf first active-trail">
           <!-- <a href="<%= AppConfig.mainnav['main_nav_option1_link'] %>"><%= t('mainnav.main_nav_option1_name')%></a> -->
	   <li class="expanded active-trail">
	     <a href="/deterlab-cyber-security-science-facility" title="" class="active"><%= t('mainnav.main_nav_option1_name')%></a>
	     <ul>
	       <li class="leaf first">
	         <a href="/login?profile=show" title="" class="active"><%= t('mainnav.profile')%></a>
	        </li>
	     </ul>
	 </li>
