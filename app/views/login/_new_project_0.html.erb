<script type="text/javascript">
  <!-- window.I18n = <%= I18n.backend.send(:translations).to_json.html_safe %> this requires prefixing with locale -->
  window.I18n = <%= current_translations.to_json.html_safe %>
</script>

<% # figure out which step this is: 0=info, 1=id self, 2=intro, 3=project leader, 4=project
   myaction = params[:action]
   step = myaction[/\d+$/]
   step = 0.to_i if step.nil?
   next_step = (step.to_i + 1.to_i)
   url = '/newproject' + next_step.to_s
   req_tag = '<span style="color: red;"><font size="+3">*</font></span>'
   options = Hash.new
   options['tabindex'] = 0
   options['required'] = 'required'

   # figure out the next description
   key = 'newproject.next' + next_step.to_s + '_link_text'
   next_desc = t(key)
 %>

    <div id="node-1" class="page-ntype published not-promoted not-sticky full-view author-admin clear-block">
    <%= simple_format add_urls(t('newproject.intro')) %>
    <p>
    <%= check_box_tag('cb1','cb1', false) %> <%= t('newproject.info.cb1_text') %>
    <br>
    <%= check_box_tag('cb2','cb2', false) %> <%= t('newproject.info.cb2_text') %>
    </p>
    </div> <!-- end of node-1 -->

    <table width="100%"> <!-- keep the navigation tidy -->
      <tr>
        <td width="50%">
	  <!-- button_to t('newproject.back_prompt'), @back_url, "method" => "get" -->
          <%= link_to 'Cancel', '/', :class => 'cancel' %>
	  <cite>
            <%= @back_desc %>
	  </cite>
	</td>
	<td>
	  <cite>
            <%= next_desc %>
	  </cite>
	</td>
	<td align="right">
          <!-- <%= submit_tag t('newproject.next_prompt'), :onclick => "return np0ok();" %> -->
          <%= button_to t('newproject.next_prompt'), url, :onclick => "return np0ok();", :method => "get" %>
	</td>
      </tr>
    </table> <!-- navigation table -->
<!-- END _new_project_0.html.erb -->
